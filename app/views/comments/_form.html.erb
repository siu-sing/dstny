<h5>Post a Comment</h5>
<%= form_for [ @question, @comment ] do |f| %>
    <p>
        <%#= f.label :comment_text %>
        <%# <br/> %>
        <%= f.text_area :comment_text, class:"form-control" %>
    </p>
    <p>
        <%= f.submit 'Comment', class:"btn btn-success btn-sm ml-2" %>
    </p>
<% end %>
